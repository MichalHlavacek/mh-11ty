<!-- Blog Section -->
<section class="px-5 md:px-10 lg:px-20 py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="font-Fira text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Latest Insights</h2>
      <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto">Strategies, tips, and insights to help you build better customer relationships and grow your retention.</p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for post in collections.featuredPosts %}
      <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <div class="flex items-center gap-2 mb-4">
            <span class="text-sm text-gray-500">{{ post.date | date }}</span>
            {% if post.data.featured %}
            <span class="px-2 py-1 bg-mustard text-black text-xs font-bold rounded">Featured</span>
            {% endif %}
          </div>
          
          <h3 class="font-Fira text-xl font-bold mb-3">
            <a href="{{ post.url }}" class="text-black hover:text-gray-700 transition-colors">
              {{ post.data.title }}
            </a>
          </h3>
          
          <p class="text-gray-600 mb-4">{{ post.data.excerpt }}</p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {% for tag in post.data.tags %}
            <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">{{ tag }}</span>
            {% endfor %}
          </div>
          
          <a href="{{ post.url }}" class="inline-flex items-center text-black font-medium hover:text-gray-700 transition-colors">
            Read More
            <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>
      {% endfor %}
    </div>
    
    <div class="text-center mt-12">
      <a href="/blog" class="inline-flex items-center px-6 py-3 bg-black text-white font-medium rounded-lg hover:bg-gray-800 transition-colors">
        View All Posts
        <svg class="ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
